<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape >
            <corners android:bottomRightRadius="10dip" android:bottomLeftRadius="10dip" />
            <gradient android:startColor="@color/yunba_universal_blue" android:endColor="@color/yunba_universal_blue"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape >
            <corners  android:bottomRightRadius="10dip" android:bottomLeftRadius="10dip" />
            <gradient android:startColor="@color/yunba_universal_blue" android:endColor="@color/yunba_universal_blue"/>
        </shape>
    </item>

    <item >
        <shape >
            <corners android:bottomRightRadius="10dip" android:bottomLeftRadius="10dip" />
            <gradient android:startColor="#00000000" android:endColor="#00000000"/>
        </shape>
    </item>

</selector>
